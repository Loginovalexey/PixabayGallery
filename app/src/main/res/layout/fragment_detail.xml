<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ru.alapplications.myphoto.ui.detail.view.ZoomablelePager
        android:id="@+id/detailViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ru.alapplications.myphoto.ui.detail.view.ZoomablelePager>

    <LinearLayout
        android:id="@+id/detailDownLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:background="@color/colorPrimaryInvisible"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/downloadImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_outline_save_24"
            tools:ignore="NestedWeights,VectorDrawableCompat" />

        <ImageView
            android:id="@+id/setWallPaper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_outline_wallpaper_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/shareImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_outline_share_24"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

</FrameLayout>


